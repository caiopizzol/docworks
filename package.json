{
  "name": "docworks",
  "version": "0.16.0",
  "description": "Ensure your docs work for developers and AI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "docworks": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:standalone": "npm run build && npx @vercel/ncc build dist/index.js -o standalone -m",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc --watch",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "check:all": "pnpm run build && pnpm run format && pnpm run lint && pnpm run type-check",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "dotenv": "^17.2.2",
    "glob": "^10.0.0",
    "openai": "^4.0.0",
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.42.0"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "documentation",
    "regression",
    "testing",
    "ci",
    "api-docs"
  ],
  "author": "caiopizzol",
  "license": "MIT",
  "homepage": "https://github.com/caiopizzol/docworks",
  "bugs": "https://github.com/caiopizzol/docworks/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/caiopizzol/docworks.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  }
}
